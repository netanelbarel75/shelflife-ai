# ShelfLife.AI Environment Configuration

# Application Settings
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-very-long-and-random
APP_NAME=ShelfLife.AI

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/shelflife
# For production:
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
# For production:
# REDIS_URL=redis://username:password@hostname:6379/0

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf

# External Services Configuration

# AWS Configuration (for S3 file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=shelflife-receipts

# Tesseract OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract

# Machine Learning Model Configuration
MODEL_PATH=ml-model/models/expiry_model.pkl

# Notification Services Configuration

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@shelflife.ai

# Payment Processing Configuration

# Stripe (for marketplace payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Analytics and Monitoring Configuration

# Sentry (for error tracking)
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# Production Settings
# Set DEBUG=false in production
# Use strong SECRET_KEY in production
# Use secure database URLs in production
# Enable HTTPS in production
