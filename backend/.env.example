# ShelfLife.AI Backend Configuration

# App Settings
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-please

# Database Settings
DATABASE_URL=postgresql://shelflife_user:shelflife_pass@localhost:5432/shelflife_db

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Google OAuth Settings (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/oauth/google/callback

# Stripe Payment Settings (Get from Stripe Dashboard)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS Settings (Optional - for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=shelflife-receipts

# External Services (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# ML Model Settings
MODEL_PATH=ml-model/models/expiry_model.pkl
TESSERACT_PATH=/usr/bin/tesseract
